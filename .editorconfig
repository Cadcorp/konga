# EditorConfig is awesome: http://EditorConfig.org
root = true

# Windows shell scripts
[*.{cmd,bat,ps1}]
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

# Unix shell scripts
[*.sh]
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

[LICENSE]
end_of_line = lf
